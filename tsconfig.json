{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2020"
  },
  "include": [
    "./types/**/*",
    "./plugins/**/*"
  ],
  "exclude": [
    "./tasks/**/*",
    "node_modules"
  ]
}